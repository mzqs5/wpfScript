            <CheckBox Name="slrw" Content="势力任务" Click="alltask_Checked"/>
            <CheckBox Name="jhpm" Content="江湖飘渺" Click="alltask_Checked"/>
            <CheckBox Name="jhjs" Content="江湖纪事" Click="alltask_Checked"/>
            <CheckBox Name="wltf" Content="万里听风" Click="alltask_Checked"/>
